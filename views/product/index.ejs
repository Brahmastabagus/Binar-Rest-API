<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Menampilkan data</title>
  <link rel="stylesheet" href="../style.css">
</head>

<style>
  th,
  td {
    text-align: center;
  }
</style>

<body>

  <div>
    <h1>List product</h1>
    <a href="/api/product">
      <button>Add Product</button>
    </a>
    <a href="/product">
      <button>Semua</button>
    </a>
    <a href="/product?stock=10&filter=kurang">
      <button>Kurang dari 10</button>
    </a>
    <a href="/product?stock=10&filter=lebih">
      <button>Lebih dari 10</button>
    </a>
    <form action="/product" method="get">
      <label>
        Stock
      </label>
      <input type="text" name="search"><br>
      <!-- <label>
        Filter
      </label>
      <input type="text" name="filter"><br> -->
      <button type="submit">Coba</button>
    </form>
    <table>
      <tr>
        <th>id</th>
        <th>name</th>
        <th>price</th>
        <th>stock</th>
        <th>image</th>
        <th>action</th>
      </tr>
      <% data.forEach((product)=> { %>
        <tr>
          <td>
            <%= product.id %>
          </td>
          <td>
            <%= product.name %>
          </td>
          <td>
            <%= product.price %>
          </td>
          <td>
            <%= product.stock %>
          </td>
          <td>
            <%= product.imageUrl %>
          </td>
          <td style="display: flex;justify-content: center;gap: 10px;">
            <a href="/update/product/<%= product.id %>">
              <button>Update</button>
            </a>
            <a href="/product/delete/<%= product.id %>">
              <button>Delete</button>
            </a>
          </td>
        </tr>
        <% }) %>
    </table>
  </div>
</body>

</html>